.include "../Makefile.inc"

LIB = dbm
SHLIB_NAME = ${LIB}.so

.PATH: ${RUBY_EXT_DIR}/${LIB}
SRCS = ${LIB}.c

CFLAGS += \
	-DHAVE_TYPE_DBM \
	-DHAVE_DBM_OPEN \
	-DHAVE_DBM_CLEARERR \
	-DDBM_HDR="<ndbm.h>" \
	-DHAVE_SYS_CDEFS_H \
	-DHAVE_DBM_DIRFNO \
	-DSIZEOF_DATUM_DSIZE="SIZEOF_INT" \
	-DTYPEOF_DATUM_DSIZE \
	-DPRI_DATUM_DSIZE_PREFIX="PRI_INT_PREFIX" \
	-DDATUM_DSIZE2NUM="INT2NUM" \
	-DNUM2DATUM_DSIZE="NUM2INT"

.include <bsd.lib.mk>
